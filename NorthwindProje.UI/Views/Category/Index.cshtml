@model IEnumerable<NorthwindProje.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Kategori Adı
            </th>
            <th>
                Açıklama
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-success">Güncelle</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-outline-primary">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger" onclick="return confirm('Silmek İstediğinize Emin Misiniz?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
